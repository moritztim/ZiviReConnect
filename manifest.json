{
    "name": "ZiviReConnect",
    "version": "1.0",
    "description": "Provides a better UX for ZiviConnect",
    "permissions": [
        "storage"
    ],
    "icons": {
        "128": "img/zivi-reconnect-square.png"
    },
	"content_scripts": [
	{
	  "matches": ["*://ziviconnect.admin.ch/*"],
	  "js": ["content.js"]
	}
  ],
    "browser_action": {
        "default_icon": "img/zivi-reconnect-square.png",
        "default_title": "ZiviReConnect",
        "default_popup": "popup/main.html"
      },
    "manifest_version": 2
}